@model EvonaZadatak.Models.User;
@{
    ViewData["Title"] = "Create User";
}
<div class="container">


    <div class="form-container ">
        <h3 class="mb-4 text-center">Add user</h3>
        <form asp-controller="User" asp-action="CreateUser"> 
            <div class="form-group mb-3">
                <label class="text-left mb-2">First name</label>
                <input asp-for="FirstName" type="text" class="form-control" placeholder="First name" id="FirstName" required >
            </div>
            <div class="form-group mb-3">
                <label class="text-left mb-2">Last name</label>
                <input asp-for="LastName" type="text" class="form-control" placeholder="Last name" required>
            </div>
            <div class="form-group mb-3">
                <label class="text-left mb-2">Personal number</label>
                <input asp-for="JMBG" type="number" class="form-control" placeholder="Personal number" required>
            </div>
            <button type="submit" class="btn btn-primary">Add</button>
        </form>
    </div>

    <style>
        .form-container {
            max-width: 400px;
            margin: 50px auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 10px;
            background-color: #f8f9fa;
        }
    </style>


</div>